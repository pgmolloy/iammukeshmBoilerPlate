@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<aside id="sideBar" class="main-sidebar sidebar-dark-primary">
    <!-- Brand Logo -->
    <a href="/" class="brand-link">
        <img src="~/images/logo.jpg" alt="AdminLTE Logo" class="brand-image img-circle"
             style="opacity: .8">
        <span class="brand-text font-weight-light">ASP.NET Core Hero</span>
    </a>

    <!-- Sidebar -->
    <div class="sidebar">
        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <li class="nav-item">
                    <a href="/" class="nav-link">
                        <i class="nav-icon fas fa-th"></i>
                        <p>
                            @localizer["Dashboard"]
                            <span class="right badge badge-danger">@localizer["New"]</span>
                        </p>
                    </a>
                </li>
                @if (User.IsInRole("SuperAdmin"))
                {
                    <li class="nav-header">@localizer["Admin"]</li>
                    <li class="nav-item has-treeview">
                        <a is-active-route asp-area="Admin" class="nav-link">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>
                                @localizer["Admin Settings"]
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a is-active-route asp-area="Admin" asp-page="/users" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>@localizer["Users"]</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a is-active-route asp-area="Admin" asp-page="/roles" class="nav-link">
                                    <i class="far fa-circle nav-icon"></i>
                                    <p>@localizer["Roles"]</p>
                                </a>
                            </li>
                        </ul>
                    </li>
                }
                <li class="nav-header">@localizer["Master"]</li>
                <li class="nav-item">
                    <a is-active-route asp-area="Products" asp-page="/Index" class="nav-link">
                        <i class="nav-icon fas fa-archive"></i>
                        <p>
                            @localizer["Products"]
                        </p>
                    </a>
                </li>
                <li class="nav-item">
                    <a is-active-route asp-area="ProductCategories" asp-page="/Index" class="nav-link">
                        <i class="nav-icon fas fa-archive"></i>
                        <p>
                            @localizer["Product Categories"]
                        </p>
                    </a>
                </li>

            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>
